<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="2dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp">
<LinearLayout
    android:layout_width="@dimen/qb_px_80"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@null"
    android:visibility="visible" >
    <TextView
        android:id="@+id/tv_history_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/qb_px_4"
        android:layout_marginTop="@dimen/qb_px_4"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="#666666"
        android:gravity="center"
        android:textSize="@dimen/qb_px_14"
        android:text="最新"/>
    <TextView
        android:id="@+id/tv_history_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/qb_px_4"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:textColor="#666666"
        android:textSize="@dimen/qb_px_14"
        android:text="Talker"/>
    <TextView
        android:id="@+id/tv_history_chat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/qb_px_4"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:textColor="#666666"
        android:textSize="@dimen/qb_px_14"
        android:text="工作"/>
    <TextView
        android:id="@+id/tv_history_chat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/qb_px_4"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:layout_marginBottom="@dimen/qb_px_4"
        android:textColor="#666666"
        android:textSize="@dimen/qb_px_14"
        android:text="通知"/>
</LinearLayout>
</android.support.v7.widget.CardView>